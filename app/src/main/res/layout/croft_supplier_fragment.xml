<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/textName"
            android:hint="Επωνυμία"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textAfm"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp" android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/textAfm"
            android:hint="ΑΦΜ"
            app:layout_constraintTop_toBottomOf="@id/textName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textPhone1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp" android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textPhone1"
            android:hint="Τηλέφωνο 1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textAfm"
            app:layout_constraintBottom_toTopOf="@id/textPhone2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textPhone2"
            android:hint="Τηλέφωνο 2"
            app:layout_constraintTop_toBottomOf="@+id/textPhone1"
            app:layout_constraintBottom_toTopOf="@id/textPhone3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp" android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textPhone3"
            android:hint="Τηλέφωνο 3"
            app:layout_constraintTop_toBottomOf="@+id/textPhone2"
            app:layout_constraintBottom_toTopOf="@id/textAddress"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp" android:layout_marginTop="15dp" android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/textAddress"
            android:hint="Διεύθυνση"
            app:layout_constraintTop_toBottomOf="@+id/textPhone3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textDistrict"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp" android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/textDistrict"
            android:hint="Περιοχή"
            app:layout_constraintTop_toBottomOf="@id/textAddress"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textCity"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp" app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/textCity"
            android:hint="Πόλη"
            app:layout_constraintTop_toBottomOf="@id/textDistrict"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>